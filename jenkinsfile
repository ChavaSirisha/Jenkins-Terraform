pipeline {
    agent any
     
    environment {
       AWS_ACCESS_KEY_ID     = credentials('be42273a-6363-4906-8776-5a72d8fe1d66')
       AWS_SECRET_ACCESS_KEY = credentials('cf87b673-e3ee-4868-b3d9-f63071fc4d15')
    }

    stages {
      stage('fetch_latest_code') {
        steps {
        git branch: 'master', url: 'https://github.com/kasturenishant/Jenkins-Terraform.git'
 }
      }
    
      stage('TF Init&Plan') {
        steps {
          sh 'terraform init'
          sh 'terraform plan'
          }
      }

      stage('Manual Approval') {
            steps {
      input(id: 'manual-approval', message: 'Do you want to proceed?', ok: 'Proceed')
            }
        }

       stage('TF Apply') {
        steps {
          sh 'terraform apply -auto-approve'
        }
      
    } 
  }
}
