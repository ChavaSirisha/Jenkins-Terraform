pipeline {
    agent {
      node {
        label "master"
      } 
    }

    stages {
      stage('fetch_latest_code') {
        steps {
         checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/kasturenishant/Jenkins-Terraform.git']]])       
 }
      }

      stage('Terraform installation'){
        steps{
        sh 'curl https://releases.hashicorp.com/terraform/0.14.9/terraform_0.14.9_linux_amd64.zip'
        sh 'unzip terraform_0.14.9_linux_amd64.zip'
        sh 'sudo mv terraform /usr/local/bin/'
        }
      }
      stage('TF Init&Plan') {
        steps {
          sh 'terraform init'
          sh 'terraform plan'
        }      
      }

      stage('Approval') {
        steps {
          script {
            def userInput = input(id: 'confirm', message: 'Apply Terraform?', parameters: [ [$class: 'BooleanParameterDefinition', defaultValue: false, description: 'Apply terraform', name: 'confirm'] ])
          }
        }
      }

      stage('TF Apply') {
        steps {
          sh 'terraform apply -input=false'
        }
      }
    } 
  }
