pipeline {
    agent {
      node {
        label "master"
      } 
    }

    tools {
     terraform 'terraform'
    }

    stages {
      stage('fetch_latest_code') {
        steps {
         checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/kasturenishant/Jenkins-Terraform.git']]])       
 }
      }
           
      stage('TF Init&Plan') {
        steps {
          sh 'terraform init'
          sh 'terraform plan'
          }
      }

      

      stage('TF Apply') {
        steps {
          sh 'terraform destroy -auto-approve'
        }
        
      }
    } 
  }
